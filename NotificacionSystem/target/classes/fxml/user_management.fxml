<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.notification.controller.UserManagementController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Administraci칩n de Usuarios">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="userTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
          <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Rol" />
        </columns>
      </TableView>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Email:" />
            <Label text="Contrase침a:" GridPane.rowIndex="1" />
            <Label text="Rol:" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="roleComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox spacing="10.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddUser" text="A침adir Usuario" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteUser" text="Eliminar Usuario" />
            <Button fx:id="updatePasswordButton" mnemonicParsing="false" onAction="#handleUpdatePassword" text="Actualizar Contrase침a" />
            <Button fx:id="changeRoleButton" mnemonicParsing="false" onAction="#handleChangeRole" text="Cambiar Rol" />
         </children>
      </HBox>
   </children>
</VBox>
