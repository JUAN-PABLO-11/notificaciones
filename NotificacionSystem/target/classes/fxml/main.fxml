<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.notification.controller.MainController">
   <children>
      <HBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="userLabel" text="Usuario: " />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Cerrar Sesión" />
         </children>
      </HBox>
      <TabPane fx:id="tabPane" prefHeight="450.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Enviar Notificación">
               <content>
                  <fx:include source="send_notification.fxml" />
               </content>
          </Tab>
          <Tab text="Registro de Actividad">
               <content>
                  <fx:include source="logs.fxml" />
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
