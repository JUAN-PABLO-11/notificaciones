<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.notification.controller.SystemNotificationsController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Notificar Mantenimiento del Sistema:" GridPane.columnSpan="2" />
      <Label text="Fecha:" GridPane.rowIndex="1" />
      <Label text="Duración:" GridPane.rowIndex="2" />
      <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="durationField" text="2 horas" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="notifyMaintenanceButton" mnemonicParsing="false" onAction="#handleNotifyMaintenance" text="Notificar Mantenimiento" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="Notificar Actualización del Sistema:" GridPane.columnSpan="2" GridPane.rowIndex="4" />
      <Label text="Versión:" GridPane.rowIndex="5" />
      <Label text="Características:" GridPane.rowIndex="6" />
      <TextField fx:id="versionField" text="2.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextArea fx:id="featuresArea" prefHeight="100.0" prefWidth="200.0" text="- Mejoras de rendimiento&#10;- Nuevas funcionalidades&#10;- Corrección de errores" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <Button fx:id="notifyUpdateButton" mnemonicParsing="false" onAction="#handleNotifyUpdate" text="Notificar Actualización" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   </children>
</GridPane>
